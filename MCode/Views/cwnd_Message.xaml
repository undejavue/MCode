<controls:ChildWindow x:Class="MCode.Views.cwnd_Message"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           MinWidth="400"  
           Title="cwnd_Message">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        
        <Button x:Name="OKButton" Content="ОК" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Center" Grid.Row="1" />
        <TextBlock Name="txt_Message" Text="TextBlock" VerticalAlignment="Top" Margin="20" TextWrapping="Wrap" />
    </Grid>
</controls:ChildWindow>